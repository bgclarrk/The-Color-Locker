<div class="row">
    <h1 class="text-center"><%= @project.title %></h1>
    <p class="text-center">Created on: <%= @project.created_at_formatted %></p>
    <p class="text-center">Created by: <%= @project.user.username %></p>
</div>
<br>
<div class="mx-auto" style="width: 500px;">
    <p><%= @project.description %></p>
</div>
<div class="row text-center">
    <div class="col-12">
        <% if @project.user.id == session[:user_id] %>
            <a href="<%= edit_project_path(@project) %>" class="card-link">Edit</a>
        <% end %>
        <br>
        <%= link_to "View Projects", projects_path %>
    </div>
</div>