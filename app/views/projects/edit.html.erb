<div class="row">
    <div class="col-12 text-center">
        <h1>Edit Project</h1>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <%= form_for @project do |f| %>
            <%= f.text_field :title, placeholder: @project.title, class: "form-control" %>
            <br>
            <%= f.text_area :description, placeholder: @project.description, class: "form-control" %>
            <br>
            <div class="text-center">
                <%= f.submit class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col-12 text-center">
        <%= form_tag project_path(@project), method: "delete" do %>
            <%= submit_tag "Delete Project", class: "btn btn-outline-danger" %>
        <% end %>
    </div>
</div>