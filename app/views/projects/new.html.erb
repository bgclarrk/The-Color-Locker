<div class="row">
    <div class="col-12 text-center">
        <h1>Create a new Project</h1>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <%= form_for @project do |f| %>
            <%= f.text_field :title, placeholder: "Project Title" %>
            <br><br>
            <%= f.text_area :description, placeholder: "Project Description" %>
            <br><br>
            <%= f.submit %>
        <% end %>
    </div>
</div>