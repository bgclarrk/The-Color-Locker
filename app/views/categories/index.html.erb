<div class="row">
    <div class="col-lg-12 text-center">
        <h1>Categories</h1>
    </div>
</div>
<div class="row">
    <% @categories.each do |category| %>
        <div class="card" style="width: 27rem;">
            <div class="card-body">
                <h5 class="card-title"><%= category.subject %></h5>
                <a href="<%= category_path(category) %>" class="card-link">View</a>
                <a href="<%= edit_category_path(category) %>" class="card-link">Edit</a>
            </div>
        </div>
    <% end %>
</div>